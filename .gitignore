# Ignore Drupal core files (composer will handle these)
core/
vendor/

# Ignore settings.php and services.yml (environment-specific settings)
sites/default/settings.php
sites/default/services.yml

# Ignore user-uploaded content (files, images, etc.)
sites/default/files/

# Ignore database dumps
# *.sql
# *.sql.gz

# Ignore temporary files and caches
sites/default/files/php/
sites/default/files/js/
sites/default/files/css/

# Ignore other local development files
node_modules/
composer.lock
npm-debug.log
yarn-debug.log
.idea/
.vscode/
.DS_Store
*.log

# Do not ignore taxonomy configuration files (vocabularies and terms)
!config/sync/taxonomy.vocabulary.*.yml
!config/sync/taxonomy.term.*.yml
!config/sync/taxonomy.settings.yml